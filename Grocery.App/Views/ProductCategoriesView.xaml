<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:Grocery.App.ViewModels"
             x:DataType="vm:ProductCategoriesViewModel"
             x:Class="Grocery.App.Views.ProductCategoriesView"
             Title="ProductCategoriesView">

    <ContentPage.Content>
        <VerticalStackLayout Padding="16" Spacing="12">
            <Label Text="ProductcategorieÃ«n"
                   FontSize="24"
                   HorizontalOptions="Center" />

            <CollectionView ItemsSource="{Binding ProductCategories}">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Frame Margin="4" Padding="8" BorderColor="LightGray">
                            <HorizontalStackLayout>
                                <VerticalStackLayout>
                                    <Label Text="ProductId: {Binding ProductId}" FontAttributes="Bold" FontSize="16" />
                                    <Label Text="CategoryId: {Binding CategoryId}" FontSize="16" />
                                </VerticalStackLayout>
                                <Button Text="Verwijder"
                                        Command="{Binding Source={RelativeSource AncestorType={x:Type vm:ProductCategoriesViewModel}}, Path=DeleteProductCategoryCommand}"
                                        CommandParameter="{Binding .}"
                                        BackgroundColor="Red"
                                        TextColor="White"
                                        Margin="16,0,0,0" />
                            </HorizontalStackLayout>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>

            <Button Text="Ververs"
                    Command="{Binding RefreshCommand}"
                    HorizontalOptions="Center" />
        </VerticalStackLayout>
    </ContentPage.Content>
</ContentPage>